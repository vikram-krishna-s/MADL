<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:id="@+id/lay">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_vikram_krishna"
            android:id="@+id/tv" android:textAlignment="center"/>
    <Button
            android:text="@string/size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bt1"/>
    <Button
            android:text="@string/color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bt2"/>

</LinearLayout>